<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBFBFB"
    android:backgroundTint="#FBFBFB"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <!-- ALUNET-->
    <TextView
        android:id="@+id/alunetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="14dp"
        android:text="@string/alunet_text"
        android:textAlignment="center"
        android:textSize="70dp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/educacaoText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="0px"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:text="Educação"
        android:textColor="#2B2B2B"
        android:textAlignment="center"
        android:textSize="22dp" />


    <TextView
        android:id="@+id/alunetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:fontFamily=""
        android:textColor="#2B2B2B"
        android:text="Acesse o portal"
        android:textAlignment="center"
        android:textSize="30dp" />


    <TextView
        android:id="@+id/alunetText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="-16dp"
        android:textColor="#2B2B2B"
        android:text="Insira suas informações abaixo"
        android:textAlignment="center"
        android:textSize="12dp" />


    <FrameLayout
        android:id="@+id/emailContainer"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp">

    /* Campo de Email */
        <View
            android:id="@+id/emailBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_background" />

        <EditText
            android:id="@+id/emailLabel"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:layout_marginTop="-0dp"
            android:hint="E-mail:"
            android:textColor="#000"
            android:textSize="10sp"
            android:background="@null"
            />

            />
    </FrameLayout>


    <FrameLayout
        android:id="@+id/passwordContainer"
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="20dp">

        /* Background do campo de senha */
        <View
            android:id="@+id/passwordBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_background" />

        /* Campo de senha */
        <EditText
            android:id="@+id/passwordLabel"
            android:layout_width="280dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:gravity="left|center"
            android:layout_marginTop="-0dp"
            android:hint="Senha:"
            android:textColor="#000"
            android:textSize="10sp"
            android:background="@null"/>
    </FrameLayout>


    /* Campo de Esqueci minha senha */
    <TextView
        android:id="@+id/passwordLabel"
        android:layout_width="158dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:gravity="left|center"
        android:text="Esqueceu a senha?"
        android:textColor="#000"
        android:textSize="16sp" />


    /* Button de Acessar */
    <TextView
        android:layout_width="300dp"
        android:layout_height="56dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:text="Acessar"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="left|center"
        android:background="@drawable/rounded_button_background"/>



    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="63dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="50dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#FBFBFB">

        <!-- Primeiro ícone -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/google" />

        <!-- Segundo ícone -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginEnd="35dp"
            android:src="@drawable/facebook" />

        <!-- Terceiro ícone -->
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/instagram" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left|center"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="25dp"
        android:text="@string/register_text" />

</LinearLayout>

